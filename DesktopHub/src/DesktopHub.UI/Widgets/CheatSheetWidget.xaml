<UserControl x:Class="DesktopHub.UI.Widgets.CheatSheetWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch"
             Background="Transparent">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#4FC3F7"/>
        <SolidColorBrush x:Key="AccentDimBrush" Color="#80619EFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="DimTextBrush" Color="#B6C3CA"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#80F5F7FA"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#26F5F7FA"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#36F5F7FA"/>
        <SolidColorBrush x:Key="TableHeaderBrush" Color="#1AF5F7FA"/>
        <SolidColorBrush x:Key="TableRowAltBrush" Color="#0AF5F7FA"/>
        <SolidColorBrush x:Key="InputHighlightBrush" Color="#304FC3F7"/>
        <SolidColorBrush x:Key="OutputHighlightBrush" Color="#3066BB6A"/>
        <SolidColorBrush x:Key="MatchHighlightBrush" Color="#30FFD54F"/>
        
        <Style x:Key="ThinScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" Focusable="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Height="20" Margin="1,2,1,2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#55F5F7FA" CornerRadius="6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" Focusable="False"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Height" Value="6"/>
                                <Setter Property="Width" Value="Auto"/>
                                <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="2,1,2,1"/>
                                <Setter TargetName="Thumb" Property="Width" Value="20"/>
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBoxItem dark style (matches SearchOverlay year selector) -->
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#F5F7FA"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="10,6"
                                Margin="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#20F5F7FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30F5F7FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox dark style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#26F5F7FA"/>
            <Setter Property="Foreground" Value="#F5F7FA"/>
            <Setter Property="BorderBrush" Value="#30F5F7FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="templateRoot" SnapsToDevicePixels="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition MinWidth="0" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Grid.ColumnSpan="2"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                                <Border x:Name="dropDownBorder"
                                        Background="#1E1E1E"
                                        BorderBrush="#30F5F7FA"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        MinWidth="{Binding ActualWidth, ElementName=templateRoot}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Hidden">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"
                                                    RenderOptions.ClearTypeHint="Enabled"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton x:Name="toggleButton"
                                          Grid.ColumnSpan="2"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="OverridesDefaultStyle" Value="True"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="20"/>
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0"
                                                                              Margin="8,5,0,5"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>
                                                            <Path Grid.Column="1"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                  Fill="#80F5F7FA"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#15F5F7FA"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="Background" Value="#20F5F7FA"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="contentPresenter"
                                              Grid.Column="0"
                                              Margin="8,5,24,5"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F5F7FA"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header row: Title + discipline dropdown -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Cheat Sheets"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextBrush}"/>
                <TextBlock x:Name="CodeBookLabel"
                          FontSize="10"
                          Foreground="{StaticResource MutedTextBrush}"
                          Margin="0,2,0,0"/>
            </StackPanel>
            
            <ComboBox x:Name="DisciplineCombo"
                     Grid.Column="1"
                     Width="140"
                     Style="{StaticResource DarkComboBox}"
                     SelectionChanged="DisciplineCombo_SelectionChanged">
                <ComboBoxItem Content="Electrical" IsSelected="True"/>
                <ComboBoxItem Content="Mechanical"/>
                <ComboBoxItem Content="Plumbing"/>
                <ComboBoxItem Content="Fire Protection"/>
            </ComboBox>
        </Grid>
        
        <!-- Main content area -->
        <Grid Grid.Row="1">
            <!-- State: Sheet list (browse/search view) -->
            <Grid x:Name="SheetListPanel" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Search box -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="6"
                        Padding="8,6"
                        Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="&#128269;" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="{StaticResource MutedTextBrush}"/>
                        <TextBox x:Name="SearchBox"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource TextBrush}"
                                CaretBrush="{StaticResource TextBrush}"
                                FontSize="12"
                                VerticalAlignment="Center"
                                TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="Placeholder"
                                                              Text="Search cheat sheets..."
                                                              Foreground="#50F5F7FA"
                                                              FontSize="12"
                                                              VerticalAlignment="Center"
                                                              IsHitTestVisible="False"
                                                              Visibility="Collapsed"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Border Grid.Column="2"
                                x:Name="ClearSearchButton"
                                Visibility="Collapsed"
                                Background="Transparent"
                                CornerRadius="3"
                                Padding="4,2"
                                Cursor="Hand"
                                MouseLeftButtonDown="ClearSearchButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#20F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="&#10005;" FontSize="10" Foreground="{StaticResource MutedTextBrush}"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Jurisdiction info bar -->
                <Border x:Name="JurisdictionBar"
                        Grid.Row="1"
                        Visibility="Collapsed"
                        Background="#15FFD54F"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="0,0,0,6">
                    <TextBlock x:Name="JurisdictionLabel"
                              FontSize="10"
                              Foreground="#CCFFD54F"
                              TextWrapping="Wrap"/>
                </Border>
                
                <!-- Sheet list -->
                <ScrollViewer Grid.Row="2"
                             VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBar}"/>
                    </ScrollViewer.Resources>
                    <StackPanel x:Name="SheetListItems"/>
                </ScrollViewer>
                
                <!-- Empty state -->
                <Border x:Name="EmptyState"
                        Grid.Row="2"
                        Visibility="Collapsed"
                        Padding="0,30">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="No cheat sheets found"
                                  FontSize="12"
                                  Foreground="{StaticResource MutedTextBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Try a different search or discipline"
                                  FontSize="10"
                                  Foreground="#60F5F7FA"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Footer -->
                <Border Grid.Row="3"
                        Margin="0,8,0,0"
                        BorderBrush="#15F5F7FA"
                        BorderThickness="0,1,0,0"
                        Padding="0,6,0,0">
                    <TextBlock x:Name="SheetCountLabel"
                              Text="0 sheets"
                              FontSize="10"
                              Foreground="{StaticResource MutedTextBrush}"/>
                </Border>
            </Grid>
            
            <!-- State: Sheet detail (table/calculator/note view) -->
            <Grid x:Name="SheetDetailPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Back button + sheet title -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            x:Name="BackButton"
                            Background="Transparent"
                            CornerRadius="4"
                            Padding="6,3"
                            Cursor="Hand"
                            Margin="0,0,8,0"
                            VerticalAlignment="Top"
                            MouseLeftButtonDown="BackButton_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="&#8592;" FontSize="14" Foreground="{StaticResource AccentBrush}"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="DetailTitle"
                                  FontSize="13"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextBrush}"
                                  TextWrapping="Wrap"/>
                        <TextBlock x:Name="DetailSubtitle"
                                  FontSize="10"
                                  Foreground="{StaticResource DimTextBrush}"
                                  Margin="0,2,0,0"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
                
                <!-- Input area (for Calculator/Table with input columns) -->
                <Border x:Name="InputPanel"
                        Grid.Row="1"
                        Visibility="Collapsed"
                        Background="{StaticResource InputHighlightBrush}"
                        CornerRadius="6"
                        Padding="10,8"
                        Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="INPUT"
                                  FontSize="9"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource AccentBrush}"
                                  Margin="0,0,0,6"
                                  Opacity="0.8"/>
                        <StackPanel x:Name="InputFields"/>
                        <Border x:Name="LookupButton"
                                Background="{StaticResource SurfaceBrush}"
                                CornerRadius="4"
                                Padding="10,5"
                                Margin="0,6,0,0"
                                Cursor="Hand"
                                HorizontalAlignment="Left"
                                MouseLeftButtonDown="LookupButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="Lookup" FontSize="11" Foreground="{StaticResource AccentBrush}"/>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Find-in-table bar -->
                <Border x:Name="FindBar"
                        Grid.Row="2"
                        Visibility="Collapsed"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="4"
                        Padding="8,4"
                        Margin="0,0,0,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Find:" FontSize="10" Foreground="{StaticResource DimTextBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox x:Name="FindBox"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource TextBrush}"
                                CaretBrush="{StaticResource TextBrush}"
                                FontSize="11"
                                VerticalAlignment="Center"
                                TextChanged="FindBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="Placeholder"
                                                              Text="Filter rows..."
                                                              Foreground="#40F5F7FA"
                                                              FontSize="11"
                                                              VerticalAlignment="Center"
                                                              IsHitTestVisible="False"
                                                              Visibility="Collapsed"/>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock x:Name="FindCount"
                                  Grid.Column="2"
                                  FontSize="10"
                                  Foreground="{StaticResource MutedTextBrush}"
                                  VerticalAlignment="Center"
                                  Margin="6,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- Table / Note content area -->
                <ScrollViewer x:Name="DetailScroller"
                             Grid.Row="3"
                             VerticalScrollBarVisibility="Hidden"
                             HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- Table view -->
                        <Grid x:Name="TableView" Visibility="Collapsed">
                            <StackPanel x:Name="TableContainer" HorizontalAlignment="Stretch"/>
                        </Grid>
                        
                        <!-- Note view -->
                        <Grid x:Name="NoteView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="6"
                                    Padding="12,10"
                                    Margin="0,0,0,8">
                                <TextBlock x:Name="NoteContent"
                                          FontSize="12"
                                          Foreground="{StaticResource TextBrush}"
                                          TextWrapping="Wrap"
                                          LineHeight="22"/>
                            </Border>
                            <Border x:Name="CopyNoteButton"
                                    Grid.Row="1"
                                    Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="4"
                                    Padding="10,5"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left"
                                    MouseLeftButtonDown="CopyNoteButton_Click">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="CopyNoteLabel" Text="&#128203; Copy" FontSize="11" Foreground="{StaticResource AccentBrush}"/>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>

                <!-- Output results area (outside scroller so it doesn't overlap table) -->
                <Border x:Name="OutputPanel"
                        Grid.Row="4"
                        Visibility="Collapsed"
                        Background="{StaticResource OutputHighlightBrush}"
                        CornerRadius="6"
                        Padding="10,8"
                        Margin="0,6,0,0">
                    <StackPanel>
                        <TextBlock Text="OUTPUT"
                                  FontSize="9"
                                  FontWeight="SemiBold"
                                  Foreground="#66BB6A"
                                  Margin="0,0,0,6"
                                  Opacity="0.8"/>
                        <StackPanel x:Name="OutputFields"/>
                    </StackPanel>
                </Border>
                
                <!-- Detail footer -->
                <Border Grid.Row="5"
                        Margin="0,6,0,0"
                        BorderBrush="#15F5F7FA"
                        BorderThickness="0,1,0,0"
                        Padding="0,6,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="DetailFooterLabel"
                                  Grid.Column="0"
                                  FontSize="10"
                                  Foreground="{StaticResource MutedTextBrush}"/>
                        <Border Grid.Column="1"
                                x:Name="FindToggle"
                                Visibility="Collapsed"
                                Background="Transparent"
                                CornerRadius="3"
                                Padding="6,2"
                                Cursor="Hand"
                                MouseLeftButtonDown="FindToggle_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="&#128269; Find" FontSize="10" Foreground="{StaticResource AccentBrush}"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
