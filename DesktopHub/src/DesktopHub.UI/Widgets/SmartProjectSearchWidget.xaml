<UserControl x:Class="DesktopHub.UI.Widgets.SmartProjectSearchWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             HorizontalAlignment="Stretch">

    <UserControl.Resources>
        <SolidColorBrush x:Key="TextBrush" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B6C3CA"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4FC3F7"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Smart Project Search"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextBrush}"/>
            <TextBlock x:Name="ProjectLabel"
                      Text="No project selected"
                      FontSize="11"
                      Foreground="{StaticResource AccentBrush}"
                      TextTrimming="CharacterEllipsis"
                      Margin="0,2,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="SearchBox"
                    Grid.Row="0"
                    Padding="10,6"
                    FontSize="12"
                    Background="#22FFFFFF"
                    Foreground="{StaticResource TextBrush}"
                    CaretBrush="{StaticResource TextBrush}"
                    BorderBrush="#33FFFFFF"
                    TextChanged="SearchBox_TextChanged"/>

            <TextBlock Grid.Row="1"
                      Text="Try: fault current letter | fpl::pdf | fpl::pdf|word | latest fault current letter"
                      FontSize="10"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      Margin="2,6,2,0"
                      TextWrapping="Wrap"/>
        </Grid>

        <ListBox x:Name="ResultsList"
                Grid.Row="2"
                Background="#0AFFFFFF"
                BorderBrush="#22FFFFFF"
                BorderThickness="1"
                Foreground="{StaticResource TextBrush}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                MouseDoubleClick="ResultsList_MouseDoubleClick"
                KeyDown="ResultsList_KeyDown">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="8" Margin="2" CornerRadius="6" Background="#10000000">
                        <StackPanel>
                            <TextBlock Text="{Binding FileName}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding RelativePath}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                <TextBlock Text="{Binding LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="  •  " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding SizeDisplay}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="  •  " FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding Extension}" FontSize="10" Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock x:Name="StatusText"
                  Grid.Row="3"
                  Text="Select a project to begin searching."
                  FontSize="10"
                  Foreground="{StaticResource TextSecondaryBrush}"
                  Margin="2,8,2,0"
                  TextWrapping="Wrap"/>
    </Grid>
</UserControl>
