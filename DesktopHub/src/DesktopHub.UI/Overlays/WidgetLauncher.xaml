<Window x:Class="DesktopHub.UI.WidgetLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widgets"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Width="180"
        SizeToContent="Height"
        MaxHeight="400"
        Deactivated="Window_Deactivated"
        KeyDown="Window_KeyDown">
    
    <Border x:Name="RootBorder"
            Background="#A8121212"
            CornerRadius="12"
            BorderBrush="#3A2A2A2A"
            BorderThickness="1">
        <Grid>
            <!-- Glass overlay effect -->
            <Border Margin="2"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#33FFFFFF"
                    Background="#14000000"
                    IsHitTestVisible="False"/>
            
            <!-- Content -->
            <Border Background="Transparent" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                              Text="Widgets"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#F5F7FA"
                              Margin="0,0,0,14"/>
                    
                    <!-- Widget buttons -->
                    <ScrollViewer x:Name="WidgetButtonsScroller"
                                  Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent"
                                  Focusable="False">
                        <ScrollViewer.Resources>
                            <Style x:Key="LauncherScrollThumbStyle" TargetType="Thumb">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="#99F5F7FA" CornerRadius="3"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <Style TargetType="ScrollBar">
                                <Setter Property="Width" Value="5"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollBar">
                                            <Grid Background="Transparent" Width="5">
                                                <Track x:Name="PART_Track" IsDirectionReversed="True">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0" IsHitTestVisible="False"/>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb Style="{StaticResource LauncherScrollThumbStyle}"/>
                                                    </Track.Thumb>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0" IsHitTestVisible="False"/>
                                                    </Track.IncreaseRepeatButton>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ScrollViewer.Resources>
                        <ScrollViewer.Style>
                            <Style TargetType="ScrollViewer">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollViewer">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="0"/>
                                                </Grid.ColumnDefinitions>
                                                <ScrollContentPresenter Grid.Column="0"/>
                                                <ScrollBar x:Name="PART_VerticalScrollBar"
                                                           Grid.Column="1"
                                                           Width="5"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Stretch"
                                                           Value="{TemplateBinding VerticalOffset}"
                                                           Maximum="{TemplateBinding ScrollableHeight}"
                                                           ViewportSize="{TemplateBinding ViewportHeight}"
                                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                           Background="Transparent"
                                                           Opacity="0"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <EventTrigger RoutedEvent="MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="PART_VerticalScrollBar"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="1" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="PART_VerticalScrollBar"
                                                                             Storyboard.TargetProperty="Opacity"
                                                                             To="0" Duration="0:0:0.4" BeginTime="0:0:0.6"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ScrollViewer.Style>
                    <StackPanel>
                        <Border x:Name="SearchWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="SearchWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Search" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="TimerWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="TimerWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â±ï¸" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Timer" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="QuickTasksWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="QuickTasksWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#9745;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Quick Tasks" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border x:Name="FrequentProjectsButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="FrequentProjectsButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#9733;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Frequent Projects" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="QuickLaunchButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="QuickLaunchButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#128640;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Quick Launch" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="DocQuickOpenButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="DocQuickOpenButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#128196;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Doc Quick Open" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="SmartProjectSearchButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="SmartProjectSearchButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#128269;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Smart Search" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Update available indicator -->
            <Ellipse x:Name="UpdateIndicator"
                     Width="10" Height="10"
                     Fill="#4CAF50"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0,0,8,8"
                     Visibility="Collapsed"
                     IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>
