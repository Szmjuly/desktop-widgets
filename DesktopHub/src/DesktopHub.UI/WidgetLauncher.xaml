<Window x:Class="DesktopHub.UI.WidgetLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widgets"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Width="180"
        Height="140"
        Deactivated="Window_Deactivated">
    
    <Border x:Name="RootBorder"
            Background="#A8121212"
            CornerRadius="12"
            BorderBrush="#3A2A2A2A"
            BorderThickness="1">
        <Grid>
            <!-- Glass overlay effect -->
            <Border Margin="2"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#33FFFFFF"
                    Background="#14000000"
                    IsHitTestVisible="False"/>
            
            <!-- Content -->
            <Border Background="Transparent" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                              Text="Widgets"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#F5F7FA"
                              Margin="0,0,0,14"/>
                    
                    <!-- Widget buttons -->
                    <StackPanel Grid.Row="1">
                        <Border x:Name="TimerWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="TimerWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏱️" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Timer" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
