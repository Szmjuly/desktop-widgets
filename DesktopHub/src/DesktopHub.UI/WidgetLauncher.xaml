<Window x:Class="DesktopHub.UI.WidgetLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widgets"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Width="180"
        SizeToContent="Height"
        MaxHeight="400"
        Deactivated="Window_Deactivated"
        KeyDown="Window_KeyDown">
    
    <Border x:Name="RootBorder"
            Background="#A8121212"
            CornerRadius="12"
            BorderBrush="#3A2A2A2A"
            BorderThickness="1">
        <Grid>
            <!-- Glass overlay effect -->
            <Border Margin="2"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#33FFFFFF"
                    Background="#14000000"
                    IsHitTestVisible="False"/>
            
            <!-- Content -->
            <Border Background="Transparent" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                              Text="Widgets"
                              FontSize="13"
                              FontWeight="SemiBold"
                              Foreground="#F5F7FA"
                              Margin="0,0,0,14"/>
                    
                    <!-- Widget buttons -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent"
                                  Focusable="False">
                    <StackPanel>
                        <Border x:Name="SearchWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="SearchWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Search" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="TimerWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="TimerWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â±ï¸" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Timer" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="QuickTasksWidgetButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="QuickTasksWidgetButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#9745;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Quick Tasks" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border x:Name="DocQuickOpenButton"
                                Background="#10F5F7FA"
                                BorderBrush="#30F5F7FA"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,10"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="DocQuickOpenButton_Click">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#25F5F7FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#128196;" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Doc Quick Open" FontSize="12" Foreground="#F5F7FA" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Update available indicator -->
            <Ellipse x:Name="UpdateIndicator"
                     Width="10" Height="10"
                     Fill="#4CAF50"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0,0,8,8"
                     Visibility="Collapsed"
                     IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>
