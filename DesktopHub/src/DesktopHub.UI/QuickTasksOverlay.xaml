<Window x:Class="DesktopHub.UI.QuickTasksOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Tasks"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Width="380"
        SizeToContent="Height"
        MaxHeight="700"
        KeyDown="Window_KeyDown">
    
    <Border x:Name="RootBorder"
            Background="#C8121212"
            CornerRadius="12"
            BorderBrush="#3A2A2A2A"
            BorderThickness="1">
        <Grid>
            <!-- Glass overlay effect -->
            <Border Margin="2"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#33FFFFFF"
                    Background="#14000000"
                    IsHitTestVisible="False"/>
            
            <!-- Content -->
            <Border Background="Transparent" Padding="18">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Close button (top right) -->
                    <Border Grid.Row="0"
                            x:Name="CloseButton"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            CornerRadius="4"
                            Padding="6,2"
                            Cursor="Hand"
                            MouseLeftButtonDown="CloseButton_Click"
                            Margin="0,-4,-4,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#30FF5252"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="&#10005;"
                                  FontSize="12"
                                  Foreground="#80F5F7FA"/>
                    </Border>
                    
                    <!-- Quick Tasks Widget -->
                    <ContentPresenter x:Name="WidgetHost"
                                     Grid.Row="1"
                                     Margin="0,4,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
