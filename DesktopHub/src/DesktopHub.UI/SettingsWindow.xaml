                                <TextBlock Text="Comma-separated folder names to skip (e.g. Archive, Backup)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="DQ_ExcludedFoldersInput" FontSize="12" Padding="8,6" TextWrapping="Wrap" MinHeight="36"
                                         Background="#22FFFFFF" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}"
                                         LostFocus="DQ_ExcludedFoldersInput_LostFocus">
                                    <TextBox.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="4"/></Style></TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                            
                            <!-- Max Files -->
                            <StackPanel Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Max Files" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="DQ_MaxFilesValue" Grid.Column="1" Text="200" FontSize="13" Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                                <TextBlock Text="Maximum number of files to display (50-500)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,6"/>
                                <Slider x:Name="DQ_MaxFilesSlider" Minimum="50" Maximum="500" TickFrequency="50" IsSnapToTickEnabled="True"
                                        ValueChanged="DQ_MaxFilesSlider_Changed" Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                            
                            <!-- File Extensions -->
                            <TextBlock Text="File Extensions" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="Comma-separated list of extensions to scan" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox x:Name="DQ_ExtensionsInput" FontSize="12" Padding="8,6" TextWrapping="Wrap" MinHeight="48"
                                     Background="#22FFFFFF" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}"
                                     LostFocus="DQ_ExtensionsInput_LostFocus">
                                <TextBox.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="4"/></Style></TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Sorting & Grouping -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Sorting &amp; Grouping" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Sort By -->
                            <TextBlock Text="Sort By" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton x:Name="DQ_SortName" Content="Name" GroupName="DQSort" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_SortChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_SortDate" Content="Date" GroupName="DQSort" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_SortChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_SortType" Content="Type" GroupName="DQSort" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_SortChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_SortSize" Content="Size" GroupName="DQSort" Foreground="{StaticResource TextBrush}" Checked="DQ_SortChanged" Cursor="Hand"/>
                            </StackPanel>
                            
                            <!-- Group By -->
                            <TextBlock Text="Group By" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <RadioButton x:Name="DQ_GroupNone" Content="None" GroupName="DQGroup" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_GroupChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_GroupCategory" Content="Category" GroupName="DQGroup" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_GroupChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_GroupExt" Content="Extension" GroupName="DQGroup" Foreground="{StaticResource TextBrush}" Margin="0,0,16,0" Checked="DQ_GroupChanged" Cursor="Hand"/>
                                <RadioButton x:Name="DQ_GroupSubfolder" Content="Subfolder" GroupName="DQGroup" Foreground="{StaticResource TextBrush}" Checked="DQ_GroupChanged" Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Behavior -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Auto-open last project -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Remember Last Project" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,2"/>
                                    <TextBlock Text="Auto-open the last selected project on launch" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <ToggleButton x:Name="DQ_AutoOpenToggle" Grid.Column="1" Width="50" Height="28" VerticalAlignment="Center"
                                              Checked="DQ_AutoOpenToggle_Changed" Unchecked="DQ_AutoOpenToggle_Changed" Cursor="Hand">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="Border" Background="#333333" CornerRadius="14" Width="50" Height="28">
                                                            <Ellipse x:Name="Thumb" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="4,0,0,0"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,4,0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                            
                            <!-- Recent Files Count -->
                            <StackPanel Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Recent Files Count" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="DQ_RecentCountValue" Grid.Column="1" Text="10" FontSize="13" Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                                <TextBlock Text="Number of recently opened files to remember (0 = disabled)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,6"/>
                                <Slider x:Name="DQ_RecentCountSlider" Minimum="0" Maximum="20" TickFrequency="1" IsSnapToTickEnabled="True"
                                        ValueChanged="DQ_RecentCountSlider_Changed" Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Frequent Projects Panel -->
                    <Border x:Name="FrequentProjectsPanel" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="20" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ThinScrollViewer}">
                            <StackPanel>
                    
                    <!-- Display Settings -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Display" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Max Projects Shown -->
                            <StackPanel Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Projects Shown" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="FP_MaxShownValue" Grid.Column="1" Text="5" FontSize="13" Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                                <TextBlock Text="Number of top projects displayed in the widget (1-10)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,6"/>
                                <Slider x:Name="FP_MaxShownSlider" Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"
                                        ValueChanged="FP_MaxShownSlider_Changed">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Background="#40FFFFFF" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton><RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton><RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Ellipse Fill="{StaticResource PrimaryBrush}" Width="16" Height="16" Stroke="White" StrokeThickness="2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                            </StackPanel>
                            
                            <!-- Max Projects Saved -->
                            <StackPanel Margin="0,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Projects Tracked" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}"/>
                                    <TextBlock x:Name="FP_MaxSavedValue" Grid.Column="1" Text="20" FontSize="13" Foreground="{StaticResource PrimaryBrush}"/>
                                </Grid>
                                <TextBlock Text="Maximum number of projects to track launch counts for (5-50)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,2,0,6"/>
                                <Slider x:Name="FP_MaxSavedSlider" Minimum="5" Maximum="50" TickFrequency="5" IsSnapToTickEnabled="True"
                                        ValueChanged="FP_MaxSavedSlider_Changed">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Background="#40FFFFFF" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton><RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton><RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Ellipse Fill="{StaticResource PrimaryBrush}" Width="16" Height="16" Stroke="White" StrokeThickness="2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Layout -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Layout" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Grid Mode Toggle -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Grid Mode" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,2"/>
                                    <TextBlock Text="Display projects in a compact grid instead of a vertical list" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ToggleButton x:Name="FP_GridModeToggle" Grid.Column="1" Width="50" Height="28" VerticalAlignment="Center" IsChecked="False"
                                              Checked="FP_GridModeToggle_Changed" Unchecked="FP_GridModeToggle_Changed" Cursor="Hand">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="Border" Background="#333333" CornerRadius="14" Width="50" Height="28">
                                                            <Ellipse x:Name="Thumb" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="4,0,0,0"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,4,0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Data Management -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Data Management" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="Manage your project launch history" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            
                            <TextBlock x:Name="FP_StatsText" Text="Loading stats..." FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Reset Launch Data -->
                            <Button x:Name="FP_ResetDataButton" Content="Reset All Launch Data" Padding="16,8" Cursor="Hand"
                                    Click="FP_ResetData_Click"
                                    Background="#30FF5252" Foreground="#FF5252" BorderBrush="#40FF5252">
                                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style></Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Transparency -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Transparency" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Transparent" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider x:Name="FP_TransparencySlider" Grid.Column="1" Minimum="0.3" Maximum="1.0" Value="0.78"
                                        TickFrequency="0.02" IsSnapToTickEnabled="True" ValueChanged="FP_TransparencySlider_Changed" VerticalAlignment="Center">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Background="#40FFFFFF" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton><RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton><RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Ellipse Fill="{StaticResource PrimaryBrush}" Width="16" Height="16" Stroke="White" StrokeThickness="2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                                <TextBlock Grid.Column="2" Text="Solid" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Quick Launch Panel -->
                    <Border x:Name="QuickLaunchPanel" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="20" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ThinScrollViewer}">
                            <StackPanel>
                    
                    <!-- Layout -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Layout" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            
                            <!-- Horizontal Mode Toggle -->
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Horizontal Mode" FontSize="13" FontWeight="Medium" Foreground="{StaticResource TextBrush}" Margin="0,0,0,2"/>
                                    <TextBlock Text="Display items in a horizontal row instead of a vertical list (max 5 visible before scrolling)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ToggleButton x:Name="QL_HorizontalModeToggle" Grid.Column="1" Width="50" Height="28" VerticalAlignment="Center" IsChecked="False"
                                              Checked="QL_HorizontalModeToggle_Changed" Unchecked="QL_HorizontalModeToggle_Changed" Cursor="Hand">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="Border" Background="#333333" CornerRadius="14" Width="50" Height="28">
                                                            <Ellipse x:Name="Thumb" Width="20" Height="20" Fill="White" HorizontalAlignment="Left" Margin="4,0,0,0"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,4,0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Drag and Drop Info -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Adding Items" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="You can add items to Quick Launch in several ways:" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            
                            <StackPanel Margin="0,0,0,4">
                                <TextBlock FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6" TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold" Text="Drag &amp; Drop:"/> 
                                    <Run Text="Drag files or folders from File Explorer directly onto the Quick Launch widget"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6" TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold" Text="Browse:"/>
                                    <Run Text="Click the + button in the widget, then use the Browse button to pick a folder"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,0" TextWrapping="Wrap">
                                    <Run FontWeight="SemiBold" Text="Manual:"/>
                                    <Run Text="Type or paste any file path, folder path, or URL into the path field"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Current Items -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Current Items" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                            <TextBlock x:Name="QL_ItemCountText" Text="Loading..." FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                            
                            <StackPanel x:Name="QL_ItemsList" Margin="0,0,0,8"/>
                            
                            <!-- Clear All -->
                            <Button x:Name="QL_ClearAllButton" Content="Clear All Items" Padding="16,8" Cursor="Hand"
                                    Click="QL_ClearAll_Click"
                                    Background="#30FF5252" Foreground="#FF5252" BorderBrush="#40FF5252">
                                <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style></Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                    
                    <!-- Transparency -->
                    <Border Background="#18FFFFFF" BorderBrush="#22FFFFFF" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Transparency" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Transparent" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider x:Name="QL_TransparencySlider" Grid.Column="1" Minimum="0.3" Maximum="1.0" Value="0.78"
                                        TickFrequency="0.02" IsSnapToTickEnabled="True" ValueChanged="QL_TransparencySlider_Changed" VerticalAlignment="Center">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Background="#40FFFFFF" Height="4" CornerRadius="2" VerticalAlignment="Center"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton><RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton><RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False"/></Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Ellipse Fill="{StaticResource PrimaryBrush}" Width="16" Height="16" Stroke="White" StrokeThickness="2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                                <TextBlock Grid.Column="2" Text="Solid" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                </Grid>
            </Grid>
            
            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <TextBlock x:Name="StatusText"
                           Text="Settings are saved automatically"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        </Grid>
    </Border>
</Window>
