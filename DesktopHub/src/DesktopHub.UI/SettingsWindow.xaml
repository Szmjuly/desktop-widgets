<Window x:Class="DesktopHub.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DesktopHub Settings"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="750"
        Height="650"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <!-- Custom thin rounded scrollbar style -->
        <Style x:Key="ThinScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="8">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="#60F5F7FA" 
                                                        CornerRadius="4"
                                                        Width="8"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ThinScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                     Grid.Column="1"
                                     Value="{TemplateBinding VerticalOffset}"
                                     Maximum="{TemplateBinding ScrollableHeight}"
                                     ViewportSize="{TemplateBinding ViewportHeight}"
                                     Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                     Style="{StaticResource ThinScrollBar}"
                                     Margin="4,0,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Glass effect container -->
    <Border x:Name="RootBorder" 
            Background="#C8181818" 
            CornerRadius="12" 
            BorderBrush="#442A2A2A" 
            BorderThickness="1">
        <Grid>
            <!-- Inner glass overlay for depth -->
            <Border x:Name="GlassOverlay"
                    Margin="2"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#33FFFFFF"
                    Background="#14000000"
                    IsHitTestVisible="False"/>
            
            <!-- Content -->
            <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header (draggable) -->
            <Grid Grid.Row="0" Margin="0,0,0,20" Background="Transparent" MouseDown="Header_MouseDown" Cursor="Hand">
                <TextBlock Text="Settings" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"/>
                <Button x:Name="CloseButton"
                        Content="âœ•"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        Background="#22FFFFFF"
                        Foreground="{StaticResource TextBrush}"
                        BorderBrush="#22FFFFFF"
                        Click="CloseButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="1"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Side Menu Layout -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Side Navigation Menu -->
                <Border Grid.Column="0" Background="#18FFFFFF" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                    <StackPanel x:Name="NavigationMenu">
                        <RadioButton x:Name="GeneralMenuButton" Content="âš™ï¸ General" IsChecked="True" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="ShortcutsMenuButton" Content="âš¡ Shortcuts" Checked="MenuButton_Checked" 
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium" 
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="AppearanceMenuButton" Content="ðŸŽ¨ Appearance" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="QuickTasksMenuButton" Content="â˜‘ Quick Tasks" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="DocQuickOpenMenuButton" Content="ðŸ“„ Doc Quick Open" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="FrequentProjectsMenuButton" Content="â­ Frequent Projects" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="QuickLaunchMenuButton" Content="ðŸš€ Quick Launch" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                        
                        <RadioButton x:Name="UpdatesMenuButton" Content="ðŸ”„ Updates" Checked="MenuButton_Checked"
                                     GroupName="SettingsMenu" Margin="0,0,0,8" Padding="12,10" FontSize="14" FontWeight="Medium"
                                     Foreground="{StaticResource TextBrush}" Cursor="Hand">
                            <RadioButton.Style>
                                <Style TargetType="RadioButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RadioButton.Style>
                        </RadioButton>
                    </StackPanel>
                </Border>
                
                <!-- Content Area -->
                <Grid Grid.Column="1">
                    <!-- Shortcuts Panel -->
                    <Border x:Name="ShortcutsPanel" Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="20" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ThinScrollViewer}">
                            <StackPanel>
                    <!-- Hotkey Section -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Global Hotkey" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Press a new key combination to change the hotkey" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <!-- Hotkey Display -->
                            <Border x:Name="HotkeyBox"
                                    Background="#22FFFFFF"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,12"
                                    Cursor="Hand"
                                    MouseDown="HotkeyBox_MouseDown">
                                <Grid>
                                    <TextBlock x:Name="HotkeyText"
                                               Text="Ctrl+Alt+Space"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="RecordingText"
                                               Text="Press a key combination..."
                                               FontSize="14"
                                               FontStyle="Italic"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                            <Button x:Name="ResetHotkeyButton"
                                    Content="Reset to Default (Ctrl+Alt+Space)"
                                    Padding="12,8"
                                    Background="#22FFFFFF"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    Click="ResetHotkeyButton_Click"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Border x:Name="HotkeyTypingWarning"
                                    Background="#332B1B00"
                                    BorderBrush="#665A3A00"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="0,12,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="HotkeyTypingWarningText"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="#F3D6A2"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Close Shortcut Section -->
                    <Border Background="{StaticResource SurfaceBrush}" 
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Widget Close Shortcut" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Shortcut key to close overlay and widget windows" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <!-- Close Shortcut Display -->
                            <Border x:Name="CloseShortcutBox"
                                    Background="#22FFFFFF"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,12"
                                    Cursor="Hand"
                                    MouseDown="CloseShortcutBox_MouseDown">
                                <Grid>
                                    <TextBlock x:Name="CloseShortcutText"
                                               Text="Esc"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource TextBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="CloseShortcutRecordingText"
                                               Text="Press a key combination..."
                                               FontSize="14"
                                               FontStyle="Italic"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                            <Button x:Name="ResetCloseShortcutButton"
                                    Content="Reset to Default (Esc)"
                                    Padding="12,8"
                                    Background="#22FFFFFF"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    Click="ResetCloseShortcutButton_Click"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Border x:Name="CloseShortcutTypingWarning"
                                    Background="#332B1B00"
                                    BorderBrush="#665A3A00"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="10"
                                    Margin="0,12,0,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="CloseShortcutTypingWarningText"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="#F3D6A2"/>
                            </Border>
                        </StackPanel>
                    </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Appearance Panel -->
                    <Border x:Name="AppearancePanel" Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8" Padding="20" Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ThinScrollViewer}">
                            <StackPanel>
                    
                    <!-- Window Transparency Section -->
                    <Border Background="#18FFFFFF" 
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Window Transparency" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <!-- Settings Window Transparency -->
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Settings Window" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"/>
                                
                                <Button x:Name="LinkSettingsButton"
                                        HorizontalAlignment="Right"
                                        Width="24"
                                        Height="24"
                                        Background="#22FFFFFF"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        Click="LinkSettingsButton_Click"
                                        Cursor="Hand"
                                        ToolTip="Link to other sliders">
                                    <Grid>
                                        <TextBlock Text="ï¿½" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="Transparent"
                                          FontSize="10"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                
                                <Slider x:Name="SettingsTransparencySlider"
                                       Grid.Column="1"
                                       Minimum="0.4"
                                       Maximum="0.95"
                                       Value="0.78"
                                       TickFrequency="0.05"
                                       IsSnapToTickEnabled="True"
                                       ValueChanged="SettingsTransparencySlider_ValueChanged"
                                       VerticalAlignment="Center">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Background="#40FFFFFF" 
                                                        Height="4" 
                                                        CornerRadius="2"
                                                        VerticalAlignment="Center"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="Slider.DecreaseLarge" Opacity="0" IsHitTestVisible="False"/>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="Slider.IncreaseLarge" Opacity="0" IsHitTestVisible="False"/>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate>
                                                                    <Ellipse Fill="{StaticResource PrimaryBrush}"
                                                                            Width="16"
                                                                            Height="16"
                                                                            Stroke="White"
                                                                            StrokeThickness="2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                                
                                <TextBlock Grid.Column="2"
                                          Text="Opaque"
                                          FontSize="10"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"/>
                            </Grid>
                            
                            <!-- Search Overlay Transparency -->
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Search Overlay" 
                                           FontSize="13" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"
                                           VerticalAlignment="Center"/>
                                
                                <Button x:Name="LinkOverlayButton"
                                        HorizontalAlignment="Right"
                                        Width="24"
                                        Height="24"
                                        Background="#22FFFFFF"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        Click="LinkOverlayButton_Click"
                                        Cursor="Hand"
                                        ToolTip="Link to other sliders">
                                    <Grid>
                                        <TextBlock Text="ï¿½" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="Transparent"
                                          FontSize="10"
                                          Foreground="{StaticResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                
                                <Slider x:Name="OverlayTransparencySlider"
                                       Grid.Column="1"
                                       Minimum="0.4"
                                       Maximum="0.95"
                                       Value="0.78"
                                       TickFrequency="0.05"
                                       IsSnapToTickEnabled="True"
                                       ValueChanged="OverlayTransparencySlider_ValueChanged"
                                       VerticalAlignment="Center">
