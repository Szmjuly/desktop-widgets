<Window x:Class="CoffeeStockWidget.UI.CoffeeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coffee Details" Height="300" Width="380"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False"
        Foreground="#FFFFFFFF">
    <Border CornerRadius="12" Background="#FF1E1E1E" BorderBrush="#55FFFFFF" BorderThickness="1.5" Padding="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header: Roaster and Coffee Title -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBlock Text="{Binding Roaster}" Foreground="#AAFFFFFF" FontSize="12"/>
                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Body: Notes -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Tasting notes" FontWeight="Bold" Margin="0,0,0,6"/>
                    <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Text="Status:" Foreground="#AAFFFFFF" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding StockText}"/>
                        <TextBlock Text=", Price: " Foreground="#AAFFFFFF" Margin="8,0,0,0"/>
                        <TextBlock Text="{Binding Price}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer: Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Open website" Width="110" Margin="0,0,8,0" Click="OpenWebsiteBtn_Click"/>
                <Button Content="Close" Width="80" Click="CloseBtn_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
