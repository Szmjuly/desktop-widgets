<Window x:Class="CoffeeStockWidget.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeStockWidget.UI"
        mc:Ignorable="d"
        Title="Coffee Stock Widget" Height="420" Width="380"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="False" Background="Transparent" Topmost="False" ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border x:Name="RootBorder" CornerRadius="12" Padding="8" Background="#E0121212" BorderBrush="#33000000" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header: Source dropdown and Close button -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="SourcePill" Grid.Row="0" Grid.Column="0" Margin="0,0,8,4" CornerRadius="14" Background="#FF1E1E1E" BorderBrush="#333" BorderThickness="1">
                    <Button x:Name="SourceButton" Background="Transparent" BorderBrush="Transparent" Height="28" Padding="10,0"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Click="SourceButton_Click">
                        <DockPanel LastChildFill="False">
                            <TextBlock x:Name="SourceLabel" Foreground="#FFEFEFEF" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" DockPanel.Dock="Left"/>
                            <TextBlock Text="▼" Foreground="#99FFFFFF" Margin="6,0,0,0" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </Button>
                </Border>

                <Button x:Name="ReloadBtn" Grid.Row="0" Grid.Column="1" Content="⟳" Width="28" Height="28" Margin="0,0,6,4"
                        Background="#22FFFFFF" Foreground="#FFEFEFEF" BorderBrush="#22FFFFFF"
                        ToolTip="Run current roaster now. Right-click for Run Enabled / Run ALL / Mark all seen." Click="ReloadBtn_Click" MouseRightButtonUp="ReloadBtn_MouseRightButtonUp"/>

                <!-- New-only toggle for current roaster (not in dropdown) -->
                <ToggleButton x:Name="NewToggle" Grid.Row="0" Grid.Column="2" Width="36" Height="28" Margin="0,0,6,4"
                              Background="#22FFFFFF" Foreground="#FFEFEFEF" BorderBrush="#22FFFFFF" Cursor="Hand"
                              ToolTip="Toggle: New only / All" Checked="NewToggle_Checked" Unchecked="NewToggle_Unchecked"
                              Content="All">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <Button x:Name="SettingsBtn" Grid.Row="0" Grid.Column="3" Content="⚙" Width="28" Height="28" Margin="0,0,6,4"
                        Background="#22FFFFFF" Foreground="#FFEFEFEF" BorderBrush="#22FFFFFF"
                        ToolTip="Settings: polling, blur, retention, roasters, colors" Click="SettingsBtn_Click"/>

                <Button x:Name="CloseBtn" Grid.Row="0" Grid.Column="4" Content="✕" Width="28" Height="28" Margin="0,0,0,4"
                        Background="#22FFFFFF" Foreground="#FFEFEFEF" BorderBrush="#22FFFFFF"
                        ToolTip="Close" Click="CloseBtn_Click"/>

                <TextBlock x:Name="StatusText" Grid.Row="1" Grid.ColumnSpan="5" Text="Starting..." Foreground="#99FFFFFF" FontSize="12"/>
            </Grid>

            <!-- Content: Scrollable list of items -->
            <Border x:Name="ContentBorder" Grid.Row="1" CornerRadius="8" Background="Transparent" Padding="4,6">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,12,0" Background="Transparent">
                    <ItemsControl x:Name="ItemsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemRoot" CornerRadius="6" Background="#00000000" Padding="14,12" Margin="0,0"
                                         Cursor="Hand" MouseLeftButtonDown="Item_MouseLeftButtonDown" MouseLeftButtonUp="Item_MouseLeftButtonUp" MouseEnter="Item_MouseEnter">
                                    <Border.ToolTip>
                                        <ToolTip Placement="Mouse" MaxWidth="280">
                                            <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                                        </ToolTip>
                                    </Border.ToolTip>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#00000000"/>
                                            <Setter Property="BorderBrush" Value="#00000000"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <!-- Do not set a hover background here; use the overlay tint below so it matches the border size -->
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Grid.Column="0" RadiusX="2" RadiusY="2" Fill="{Binding AccentBrush}" Margin="0,0,6,0"/>
                                        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="8,0,8,0">
                                            <!-- Roaster -->
                                            <TextBlock Text="{Binding Roaster}" Foreground="#99FFFFFF" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                            <!-- Coffee title -->
                                            <TextBlock Text="{Binding Title}" Foreground="#FFEFEFEF" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Notes}" Foreground="#BBFFFFFF" FontSize="10" FontStyle="Italic" TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Notes}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <!-- Right column: New/Back badge above the price -->
                                        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8,0,8,0">
                                            <Border CornerRadius="6" Background="{Binding AccentBrush}" Padding="6,2" Margin="0,0,0,4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding BadgeVisible}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <!-- Use a distinct color for BACK badge -->
                                                            <DataTrigger Binding="{Binding BadgeText}" Value="BACK">
                                                                <Setter Property="Background" Value="#FFEFB16D"/>
                                                            </DataTrigger>
                                                            <!-- Use a distinct color for NEW badge -->
                                                            <DataTrigger Binding="{Binding BadgeText}" Value="NEW">
                                                                <Setter Property="Background" Value="#FF9AE59A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding BadgeText}" Foreground="#FF000000" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding Price}" Foreground="#FFEFEFEF" FontSize="12" HorizontalAlignment="Right" TextAlignment="Right"/>
                                            <TextBlock Text="{Binding StockText}" Foreground="{Binding StockBrush}" FontSize="11" Margin="0,2,0,0" HorizontalAlignment="Right" TextAlignment="Right"/>
                                        </StackPanel>
                                        <!-- Subtle accent-tinted overlay on hover (toggle via settings) -->
                                        <Border Grid.ColumnSpan="3" Panel.ZIndex="-1" IsHitTestVisible="False" Margin="-4" Background="{Binding AccentBrush}" CornerRadius="8">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Opacity" Value="0"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsMouseOver, ElementName=ItemRoot}" Value="True"/>
                                                                <Condition Binding="{Binding AccentHoverTintEnabled, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Opacity" Value="0.08"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <!-- Overlay accent border shown on hover (to match tint size) -->
                                        <Border Grid.ColumnSpan="3" Panel.ZIndex="1" IsHitTestVisible="False" Margin="-4" BorderBrush="{Binding AccentBrush}" BorderThickness="2" CornerRadius="8" Background="Transparent">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Opacity" Value="0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=ItemRoot}" Value="True">
                                                            <Setter Property="Opacity" Value="1"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Empty state overlay: visibility controlled in code-behind to avoid flicker -->
            <TextBlock x:Name="EmptyMessage" Grid.Row="1" Text="Empty database — click ⟳ to fetch" Foreground="#77FFFFFF" FontSize="13"
                       HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"
                       TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Update bubble overlay -->
            <Ellipse x:Name="Bubble" Width="12" Height="12" Fill="#FF4CAF50" StrokeThickness="0"
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6" Visibility="Collapsed"/>
        </Grid>
    </Border>
</Window>
